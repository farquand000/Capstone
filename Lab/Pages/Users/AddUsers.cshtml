@page
@model EmptyCoreAppTest.Pages.Users.AddUsersModel
@{
    ViewData["Title"] = "Add Users";
}

<form asp-page="AddUsers">
    <input type="text" asp-for="NewUser.firstName" placeholder="First Name" />
    <br />
    <input type="text" asp-for="NewUser.secondName" placeholder="Last Name" />
    <br />
    <input type="hidden" asp-for="username" placeholder="Username" />
    <br />
    @*<input type="text" asp-for="NewUser.passphrase" placeholder="passphrase" />
    <br />*@
    <input type="text" asp-for="NewUser.email" placeholder="Email" />
    <br />
    <input type="text" asp-for="NewUser.userType" placeholder="User Type" />
    <br />
    <input type="text" asp-for="NewUser.professionalCompany" placeholder="Professional Company" />
    <br />
    <input type="text" asp-for="NewUser.professionalEmail" placeholder="Professional Email" />
    <br />
    <input type="text" asp-for="NewUser.facultyAssociation" placeholder="Faculty Association" />
    <br />
    <button type="submit">Create User -> </button>
    <a asp-page="Index">Cancel</a>
    <button class="btn btn-outline-primary" asp-page="AddUsers" asp-page-handler="PopulateHandler" formnovalidate>Populate</button>
    <button class="btn btn-outline-primary" asp-page="AddUsers" asp-page-handler="ClearHandler" formnovalidate>Clear</button>


</form>